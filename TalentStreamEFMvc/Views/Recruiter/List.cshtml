@model List<TalentStreamEFMvc.Models.Recruiter>

@{
    ViewData["Title"] = "All Recruiters";
}

<h2>All Recruiters</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Recruiter ID</th>
                <th>Company Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recruiter in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => recruiter.RecruiterId)</td>
                    <td>@Html.DisplayFor(modelItem => recruiter.CompanyName)</td>
                    <td>@Html.DisplayFor(modelItem => recruiter.Email)</td>
                    <td>@Html.DisplayFor(modelItem => recruiter.MobileNumber)</td>
                    <td>@Html.ActionLink("Edit", "Update", "Recruiter", new { id = recruiter.RecruiterId }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No recruiters found.</p>
}

